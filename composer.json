{
    "name": "facebook/facebook-instant-articles-sdk-extensions-php",
    "description": "Facebook Instant Articles SDK Extensions in PHP to transform IA markup to AMP, Apple News etc",
    "keywords": ["facebook", "sdk", "instant", "articles", "instantarticles", "amp", "apple news"],
    "type": "library",
    "homepage": "https://github.com/facebook/facebook-instant-articles-sdk-extensions-php",
    "license": "proprietary",
    "authors": [{
        "name": "Facebook",
        "homepage": "https://github.com/facebook/facebook-instant-articles-sdk-extensions-php/contributors"
    }],
    "require": {
        "php": "^5.4 || ^7.0",
        "facebook/facebook-instant-articles-sdk-php": "^1.5.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Facebook\\InstantArticles\\": "src/Facebook/InstantArticles/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Facebook\\InstantArticles\\": "tests/Facebook/InstantArticles/"
        }
    },
    "scripts": {
        "all": [
            "@cs",
            "@test"
        ],
        "cs": [
            "composer install",
            "phpcbf --standard=phpcs.xml -p || phpcs --standard=phpcs.xml -p"
        ],
        "test": [
            "composer install",
            "phpunit"
        ]
    }
}
